        <Button Content="Go" HorizontalAlignment="Left" Margin="170,223,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <TextBlock HorizontalAlignment="Left" Height="28" Margin="56,260,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="311"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Enter URL to convert" VerticalAlignment="Top" Width="265"/>
        <TextBlock HorizontalAlignment="Left" Margin="56,260,0,0" TextWrapping="Wrap" Text="Result" VerticalAlignment="Top"/>
        <TextBlock x:Name="Result" HorizontalAlignment="Left" Height="37" Margin="56,285,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="289"/>

    </Grid>
</Page>
